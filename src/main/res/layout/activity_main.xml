    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:baselineAligned="false">

        <Button
            android:id="@+id/btn_C"
            android:layout_width="0dp"
